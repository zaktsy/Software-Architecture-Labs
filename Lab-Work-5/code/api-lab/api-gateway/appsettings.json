{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/Events/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "events-api", "Port": 5400 }
      ],
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE"],
      "UpstreamPathTemplate": "/events/{url}"
    },
    {
      "DownstreamPathTemplate": "/api/Tickets/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "tickets-api", "Port": 5500 }
      ],
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE"],
      "UpstreamPathTemplate": "/tickets/{url}"
    }
  ]
}
